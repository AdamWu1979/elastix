# Add include dirs
include_directories( ${ELASTIX_INCLUDE_DIRS} )

# Add library dirs
link_directories( ${ELASTIX_LIBRARY_DIRS} )

# Maintains backwards compatibility by providing old-style target information
# provide a targets file
if( ${ELASTIX_CONFIG_TARGETS_FILE} )
	include( ${ELASTIX_CONFIG_TARGETS_FILE} )
endif()

if( ${elxLIBRARY_DEPENDS_FILE} )
	include( ${elxLIBRARY_DEPENDS_FILE} )
endif()
